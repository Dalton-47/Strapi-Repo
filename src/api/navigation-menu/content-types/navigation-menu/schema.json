{
  "kind": "collectionType",
  "collectionName": "navigation_menus",
  "info": {
    "singularName": "navigation-menu",
    "pluralName": "navigation-menus",
    "displayName": "Navigation Menu",
    "description": "KRA website navigation structure"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "url": {
      "type": "string"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::navigation-menu.navigation-menu",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::navigation-menu.navigation-menu",
      "mappedBy": "parent"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isMainMenu": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "target": {
      "type": "enumeration",
      "enum": ["_self", "_blank"],
      "default": "_self"
    }
  }
}
