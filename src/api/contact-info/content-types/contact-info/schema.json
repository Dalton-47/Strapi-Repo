{
  "kind": "collectionType",
  "collectionName": "contact_infos",
  "info": {
    "singularName": "contact-info",
    "pluralName": "contact-infos",
    "displayName": "Contact Info",
    "description": "KRA contact information and office details"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["headquarters", "contact-center", "regional-office", "service-center"],
      "required": true
    },
    "address": {
      "type": "text"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "workingHours": {
      "type": "string"
    },
    "coordinates": {
      "type": "json"
    },
    "isPrimary": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "services": {
      "type": "json"
    }
  }
}
